<Window x:Class="IoNote.NotePages.OpenNoteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OpenNoteWindow"
        Height="450"
        Width="800"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen"
        Background="#F7F7F7">

    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <Viewbox Stretch="Uniform" StretchDirection="Both">
            <!-- Bazowy Grid -->
            <Grid Width="800" Height="450" Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Panel boczny  -->
                <StackPanel Background="AliceBlue"
                            Grid.Column="0"
                            Width="200"
                            Orientation="Vertical">
                    <Button x:Name="returnButton"
                            Content="Powrót"
                            Width="140"
                            Height="30"
                            Margin="10,5"
                            Click="returnButton_Click"/>
                    <Button x:Name="viewButton"
                            Content="Podgląd"
                            Width="140"
                            Height="30"
                            Margin="10,5"
                            Click="viewButton_Click"/>
                    <Button x:Name="saveButton"
                            Content="Zapisz"
                            Width="140"
                            Height="30"
                            Margin="10,5"
                            Click="saveButton_Click"/>
                    <Button x:Name="exportButton"
                            Content="Eksport"
                            Width="140"
                            Height="30"
                            Margin="10,5"
                            Click="exportButton_Click"/>
                    <Button x:Name="drawButton"
                            Content="Rysuj"
                            Width="140"
                            Height="30"
                            Margin="10,5"
                            Click="drawButton_Click"/>
                    <Button x:Name="addImageDesktop"
                            Content="Obraz z dysku"
                            Width="140"
                            Height="30"
                            Margin="10,5"
                            Click="addImageDesktop_Click"/>
                    <Button x:Name="addImageDB"
                            Content="Obraz z galerii"
                            Width="140"
                            Height="30"
                            Margin="10,5"
                            Click="addImageDB_Click"/>
                    <Button x:Name="deleteImageDB"
                            Content="Usuń z galerii"
                            Width="140"
                            Height="30"
                            Margin="10,5"
                            Click="DeleteImageDB_Click"/>
                </StackPanel>

                <!-- RichTextBox -->
                <RichTextBox x:Name="EditBox"
                             Grid.Column="1"
                             Margin="10"
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Auto">
                    <FlowDocument>
                        <Paragraph>
                            <Run Text="RichTextBox "/>
                            <Run Text="*Italictext* "/>
                            <Run Text="**Boldtext** "/>
                            <Run Text="***BoldItalictext***"/>
                        </Paragraph>
                    </FlowDocument>
                </RichTextBox>

                <!-- Podgląd -->
                <FlowDocumentPageViewer x:Name="PreviewDoc"
                                        Grid.Column="2"
                                        Margin="10">
                    <FlowDocument>
                        <Paragraph>
                            <Italic>Preview</Italic>
                        </Paragraph>
                    </FlowDocument>
                </FlowDocumentPageViewer>
            </Grid>
        </Viewbox>
    </ScrollViewer>
</Window>
