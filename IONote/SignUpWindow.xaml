<Window x:Class="IoNote.AuthorizationPages.SignUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Io Note - Rejestracja"
        Height="500"
        Width="800"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen"
        Background="#F7F7F7">

    <!-- ScrollViewer + Viewbox -->
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <Viewbox Stretch="Uniform" StretchDirection="Both">

            <!-- Bazowy Grid -->
            <Grid Width="800" Height="500" Background="#F7F7F7">

                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Label x:Name="UsernameLabel"
                           Content="Nazwa użytkownika"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           Grid.Row="0"
                           Grid.Column="0"
                           Margin="10" />

                    <TextBox x:Name="UsernameTextBox"
                             Height="30"
                             Padding="5"
                             Grid.Row="0"
                             Grid.Column="1"
                             Margin="10" />

                    <Label x:Name="PasswordLabel"
                           Content="Hasło"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           Grid.Row="1"
                           Grid.Column="0"
                           Margin="10" />

                    <PasswordBox x:Name="PasswordBox"
                                 Height="30"
                                 Padding="5"
                                 Grid.Row="1"
                                 Grid.Column="1"
                                 Margin="10" />

                    <TextBox x:Name="PasswordTextBox"
                             Height="30"
                             Padding="5"
                             Grid.Row="1"
                             Grid.Column="1"
                             Visibility="Collapsed"
                             Margin="10" />

                    <CheckBox x:Name="ShowPasswordCheckBox"
                              Content="Pokaż hasło"
                              Grid.Row="2"
                              Grid.Column="1"
                              Margin="10"
                              HorizontalAlignment="Left"
                              Checked="ShowPassword_Checked"
                              Unchecked="ShowPassword_Unchecked" />

                    <Label x:Name="RepeatPasswordLabel"
                           Content="Powtórz hasło"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           Grid.Row="3"
                           Grid.Column="0"
                           Margin="10" />

                    <PasswordBox x:Name="RepeatPasswordBox"
                                 Height="30"
                                 Padding="5"
                                 Grid.Row="3"
                                 Grid.Column="1"
                                 Margin="10" />

                    <TextBox x:Name="RepeatPasswordTextBox"
                             Height="30"
                             Padding="5"
                             Grid.Row="3"
                             Grid.Column="1"
                             Visibility="Collapsed"
                             Margin="10" />

                    <CheckBox x:Name="ShowRepeatPasswordCheckBox"
                              Content="Pokaż powtórzone hasło"
                              Grid.Row="4"
                              Grid.Column="1"
                              Margin="10"
                              HorizontalAlignment="Left"
                              Checked="ShowRepeatPassword_Checked"
                              Unchecked="ShowRepeatPassword_Unchecked" />

                    <Label x:Name="PasswordReminderQuestionLabel"
                           Content="Pytanie przypomnienia hasła"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           Grid.Row="5"
                           Grid.Column="0"
                           Margin="10" />

                    <TextBox x:Name="PasswordReminderQuestionTextBox"
                             Height="30"
                             Padding="5"
                             Grid.Row="5"
                             Grid.Column="1"
                             Margin="10" />

                    <Label x:Name="PasswordReminderAnswerLabel"
                           Content="Odpowiedź na pytanie przypomnienia hasła"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           Grid.Row="6"
                           Grid.Column="0"
                           Margin="10" />

                    <TextBox x:Name="PasswordReminderAnswerTextBox"
                             Height="30"
                             Padding="5"
                             Grid.Row="6"
                             Grid.Column="1"
                             Margin="10" />

                    <StackPanel Grid.Row="7"
                                Grid.Column="1"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Margin="10">
                        <Button x:Name="BackButton"
                                Content="Wstecz"
                                Width="80"
                                Height="30"
                                Margin="0,0,10,0"
                                Click="BackButton_Click"/>

                        <Button x:Name="SignUpButton"
                                Content="Zarejestruj"
                                Width="120"
                                Height="30"
                                Click="SignUpButton_Click" />
                    </StackPanel>
                </Grid>
            </Grid>
        </Viewbox>
    </ScrollViewer>
</Window>
